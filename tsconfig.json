{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["./server/shared/*"]
    },
    "types": ["node"],
    "lib": ["es2022", "dom"]
  },
  "exclude": ["node_modules", "dist"]
}
